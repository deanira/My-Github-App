<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".ui.splashscreen.SplashActivity">

    <ImageView
        android:id="@+id/iv_github_mark"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginHorizontal="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_github_mark_svg_white"
        android:contentDescription="@string/github_mark" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_github_mark"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_github_logo_svg_white"
        android:contentDescription="@string/github_logo" />

</RelativeLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyGithubApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/dark_grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/PoppinsTextViewStyle</item>
        <item name="buttonStyle">@style/PoppinsButtonStyle</item>
    </style>

<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
<!--    </style>-->
    <style name="PoppinsTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="PoppinsButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabLayoutTextStyle.Selected">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutTextStyle.Unselected">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>